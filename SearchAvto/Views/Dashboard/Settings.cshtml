                        <td>@type.Id</td>
                        <td>@type.FullName</td>
                        <td>@type.ShortName</td>
                        <td>
                            @HtmlManager.EditIconLink(Url.Action("EditTireCarcassType", "Dashboard", new { id = type.Id }))
                            @HtmlManager.DeleteIconLink(Url.Action("DeleteTireCarcassType", "Dashboard", new { id = type.Id }))
                        </td>
                    </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            Типы трансмиссии
            <a style="display: inline-block" title="Добавить новый" href="@Url.Action("AddTransmissionType", "Dashboard")"><i class="fa im fa-plus-circle fa-fw"></i></a>
        </div>
