                            @HtmlManager.EditIconLink(Url.Action("EditTransmissionType", "Dashboard", new { id = type.Id }))
                            @HtmlManager.DeleteIconLink(Url.Action("DeleteTransmissionType", "Dashboard", new { id = type.Id }))
                        </td>
                    </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            Типы расположения двигателя
            <a style="display: inline-block" title="Добавить новый" href="@Url.Action("AddEngineLocation", "Dashboard")"><i class="fa im fa-plus-circle fa-fw"></i></a>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-bordered table-hover" style="width: 100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Название</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (EngineLocation type in Model.EngineLocations)
                    {
                    <tr>
