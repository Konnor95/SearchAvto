                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ValvesArrangement type in Model.ValvesArrangements)
                    {
                    <tr>
                        <td>@type.Id</td>
                        <td>@type.Name</td>
                        <td>@type.CodeName</td>
                        <td>
                            @HtmlManager.EditIconLink(Url.Action("EditValvesArrangement", "Dashboard", new { id = type.Id }))
                            @HtmlManager.DeleteIconLink(Url.Action("DeleteValvesArrangement", "Dashboard", new { id = type.Id }))
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

@section Styles
{
    @Styles.Render("~/bundles/DataTablesStyles")
}
@section Scripts
{
    @Scripts.Render("~/bundles/DataTablesScripts")
    <script>
        $(document).ready(function () {
            $('table').dataTable();
        });
    </script>
}