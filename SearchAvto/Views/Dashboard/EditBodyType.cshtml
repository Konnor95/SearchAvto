@model Tuple<BodyType,IEnumerable<BodyClass>, IEnumerable<BodyType>>
@{
    ViewBag.Title = "Редактировать тип кузова";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header fleft">Редактировать тип кузова</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @HtmlManager.ProccessResultContainer(ViewBag.Result)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("ManageBodyTypeEditing", "Dashboard", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                <input type="hidden" id="Id" name="Id" value="@Model.Item1.Id"/>
                <div class="form-group">
                    <label class="control-label col-md-2" for="Name">Название</label>
                    <div class="col-md-2">
                        <input class="form-control" id="Name" name="Name" type="text" placeholder="Название" value="@Model.Item1.Name" required="required">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Класс кузова</label>
                    <div class="col-md-2">
                        @Html.DropDownList("BodyClassId", new SelectList(Model.Item2, "Id", "Name",Model.Item1.BodyClassId), new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Базовый тип</label>
                    <div class="col-md-2">
                        @Html.DropDownList("BaseBodyTypeId", new SelectList(Model.Item3, "Id", "Name", Model.Item1.BaseBodyTypeId), new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Описание</label>
                    <div class="col-md-4">
                        <textarea class="form-control" rows="5" id="Description" name="Description" required="required">@Model.Item1.Description</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @HtmlManager.SubmitButton()
                        @HtmlManager.DefaultButton(Html.ActionLink("Назад", "Settings", "Dashboard"))
                    </div>
                </div>
            </div>
        }
    </div>
</div>
