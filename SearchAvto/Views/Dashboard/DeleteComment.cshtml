@model Comment
@{
    ViewBag.Title = Model != null ? "Удалить комментарий" : "Комментарий не найден";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
@if (Model == null)
{
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header fleft">Комментарий не найден</h1>
        </div>
    </div>
    return;
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header fleft">Удалить комментарий</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <p>Вы уверены, что хотите удалить комментарий "@Model.ShortText" ?</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("ManageCommentDeleting", "Dashboard", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(id => Model.Id)
            @Html.HiddenFor(newsId => Model.NewsId)
            <div class="form-group">
                @HtmlManager.SubmitButton()
                @HtmlManager.DefaultButton(Html.ActionLink("Назад", "News", "Dashboard", new { id = Model.NewsId }, null))
            </div>
        }
    </div>
</div>