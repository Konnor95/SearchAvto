@{
    ViewBag.Title = "Добавить бренд";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="breadcrumbs flat">
    @HtmlManager.DashboardBreadCrumbs(Html, HtmlManager.AddLink(Html))
</div>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header fleft">Добавить бренд</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @HtmlManager.ProccessResultContainer(ViewBag.Result)
        @using (Html.BeginForm("ManageBrandAdding", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label class="control-label col-md-2" for="Name">Название</label>
                    <div class="col-md-2">
                        <input class="form-control" id="Name" name="Name" type="text" placeholder="Название" required="required">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Изображение</label>
                    <div class="col-md-2">
                        @HtmlManager.ImageUpload()
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @HtmlManager.SubmitButton()
                        @HtmlManager.DefaultButton(Html.ActionLink("Назад", "Brands", "Dashboard"))
                    </div>
                </div>
            </div>
        }
    </div>
</div>
