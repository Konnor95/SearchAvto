@model Tuple<IEnumerable<BodyClass>,IEnumerable<BodyType>>
@{
    ViewBag.Title = "Добавить тип кузова";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header fleft">Добавить тип кузова</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @HtmlManager.ProccessResultContainer(ViewBag.Result)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("ManageBodyTypeAdding", "Dashboard", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label class="control-label col-md-3" for="Name">Название</label>
                    <div class="col-md-2">
                        <input class="form-control" id="Name" name="Name" type="text" placeholder="Название" required="required">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Класс кузова</label>
                    <div class="col-md-2">
                        @Html.DropDownList("BodyClassId", new SelectList(Model.Item1, "Id", "Name"), new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Базовый тип</label>
                    <div class="col-md-2">
                        @Html.DropDownList("BaseBodyTypeId", new SelectList(Model.Item2, "Id", "Name"), new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Описание</label>
                    <div class="col-md-4">
                        <textarea class="form-control" rows="5" id="Description" name="Description" required="required"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @HtmlManager.SubmitButton()
                        @HtmlManager.DefaultButton(Html.ActionLink("Назад", "Settings", "Dashboard"))
                    </div>
                </div>
            </div>
        }
    </div>
</div>
