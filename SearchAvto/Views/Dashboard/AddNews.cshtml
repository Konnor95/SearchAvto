@{
    ViewBag.Title = "Добавить новость";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
@*<div class="breadcrumbs flat">
        @HtmlManager.DashboardBreadCrumbs(Html, HtmlManager.AddLink(Html))
    </div>*@
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header fleft">Добавить новость</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @HtmlManager.ProccessResultContainer(ViewBag.Result)
        @using (Html.BeginForm("ManageNewsAdding", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label class="control-label col-md-2" for="Title">Название</label>
                    <div class="col-md-3">

                        <input class="form-control" id="Title" name="Title" type="text" placeholder="Название 1" required="required">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2" for="Date">Дата публикации</label>
                    <div class="col-md-3">
                        <input class="form-control" id="Date" name="Date" type="date" required="required">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2" for="Text">Текст новости</label><br />

                </div>
                <textarea id="Text" name="Text" required="required"></textarea>
                <div class="form-group">
                    <label class="control-label col-md-2">Изображение</label>
                    <div class="col-md-3">
                        @HtmlManager.ImageUpload(required: true)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @HtmlManager.SubmitButton()
                        @HtmlManager.DefaultButton(Html.ActionLink("Назад", "AllNews", "Dashboard"))
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts
{
    <script src="~/Plugins/CKEditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('Text');
    </script>
}
