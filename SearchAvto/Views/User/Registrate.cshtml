@model RegistrationModel
@{
    ViewBag.Title = "Регистрация";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script>

        function submitForm() {

            var Name = $("#name");
            var Mail = $("#Email");
            var PassWord = $("#Password");
            var ConfirmPassword = $("#ConfirmPassword");
            var imageUpload = $("#imageUpload");

            if (Name.val() == "" ||
                Mail.val() == "" ||
                PassWord.val() == "" ||
                ConfirmPassword.val() == ""
                || imageUpload.val() == null || imageUpload.val() == "") {
                document.getElementById("information").innerHTML = 'Заполнены не все поля';
                $("#info").show();
                return;
            }

            console.log(PassWord.val());
            console.log(ConfirmPassword.val());

            if (ConfirmPassword.val() != PassWord.val()) {
                document.getElementById("information").innerHTML = 'Пароли не совпадают';
                $("#info").show();
            }

            else {
                $("#main_form").submit();
            }
        }
    </script>
}
<div class="container">
    <h2>Регистрация</h2>
    @HtmlManager.ProccessResultContainer(ViewBag.Result)
    <div id="info" style="display: none" class="alert alert-danger">
        <span id="information"></span>
    </div>

    @using (Html.BeginForm("RegistrateUser", "User", FormMethod.Post, new { @id = "main_form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, "Логин")
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { @required = true })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, "Email")
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { @required = true })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, "Пароль")
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { @required = true })
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPassword, "Подтвердите пароль")
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ConfirmPassword, new { @required = true })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                </div>
            </div>
            <div class="form-group">
               @Html.Label("Изображение профиля")
                <div class="col-md-10">
                    @HtmlManager.ImageUpload(required:true)
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" onclick="submitForm();" class="btn btn-1" value="Подтвердить" />
                </div>
            </div>
        </div>
    }
</div>
